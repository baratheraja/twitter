<% provide(:title, @user.name) %>
<br><br><br><div class="row">
  <aside class="col-md-4">
    <section class="user_info">
 
<center><h1> <%= gravatar_for @user %>
<%= @user.name %></h1>
</center>
</section>
  </aside>

<div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Tweets (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
    <% end %>
  </div>

</div>